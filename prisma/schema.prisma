
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs" 
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        Int      @id @default(autoincrement())
  email                     String   @unique
  
  password                  String?  
  provider                  String   @default("local") // 계정 제공자: 'google', 'apple', 'local'
  providerId                String?
  refreshTokenHash          String?  @db.Text 

  firstName                 String?
  lastName                  String?
  
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}